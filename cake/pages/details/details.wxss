.container swiper,.container swiper swiper-item{
  width:100%;
  height:600rpx;
}
.container swiper-item image{
  width:100%;
  height:100%;
}
.title{
  font-size:22px;
}
.price{
  font-size:18px;
  margin-top:20rpx;
  color:#f00;
}
.details_nav{
  display:flex;
  flex-direction: column;
  border-bottom:1px solid #ddd;
}
.details_nav,.freight,.select,.distribution{
  padding:20rpx;
  background-color:#fff;
}
.freight{
  font-size:14px;
  color:#666;
}
.freight,.select,.distribution,.cart{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.select{
  margin-top:20rpx;
  border-bottom:1px solid #ddd;
}
.select,.distribution{
  font-size:14px;
}
.select image,.distribution image{
  width:50rpx;
  height:50rpx;
}
.details image{
  width:100%;
  /* height:500rpx; */
}
.details{
  margin-top:20rpx;
  /* width:100%;  */
}
.cart{
  position:fixed;
  bottom:0;
  width:100%;
}
.cart view{
  width:50%;
  height:80rpx;
  font-size:16px;
  text-align: center;
  line-height:80rpx;
  color:#fff;
}
.cart view:first-child{
  background:rgb(248, 149, 0);
}
.cart view:last-child{
  background-color:rgb(255, 0, 0);
}