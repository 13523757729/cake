/**index.wxss**/
.containner input{
  width:90%;
  height:60rpx;
  /* border:1rpx solid black; */
  background:#fff;
  font-size:30rpx;
  line-height: 60rpx;
  padding:0 80rpx;
  margin: auto;
  margin-top:20rpx;
  background-image: url(http://127.0.0.1:3200/img/index/search.png);
  background-size:48rpx;
  background-repeat: no-repeat;
  background-position:3% center;
  box-sizing: border-box;
}
.containner swiper,.containner swiper-item{
  width:100%;
  height:400rpx;
  margin-top:10rpx;
}
.containner swiper,.containner swiper-item image{
  width:100%;
  height:300rpx;
}
.cake_nav{
  display: flex;
  flex-wrap:wrap;
  background-color:#fff;
}
.cake_nav :focus{
  background:transparent;
}
.nav_item{
  width:25%;
  height:160rpx;
  display: flex;
  flex-direction: column;  /*元素按列排整*/
  justify-content: center;  /*水平居中*/
  align-items: center;    /*垂直居中*/
  font-size:14px;
}
.nav_item image{
  width:120rpx;
  height:90rpx;
  vertical-align: middle;
  text-align: center;
  margin-bottom:10rpx;
} 
.hotSale{
  width:100%;
  height:350rpx;
  background-size:100% 100%;
  background-repeat: no-repeat;
  color:rgb(129, 103, 114);
  font-weight:600;
  padding:20rpx;
  box-sizing: border-box;
  text-align: center;
  margin-top:10rpx;
  position:relative;
}
.look{
  width:90rpx;
  height:30rpx;
  border-radius:15rpx;
  text-align: center;
  line-height:30rpx;
  font-size:9px;
  background-color:rgb(201, 182, 13);
  color:#fff;
  position:absolute;
  top:80rpx;
  right:240rpx;
}
.cakeList{
  background-color:#fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* height: */
  padding:20rpx;
}
.cakeList .cakeItem{
  width:50%;
  height: 450rpx;
  /* padding:10px; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;  /*元素按列排整*/
  /*justify-content: center;  /*水平居中*/
  align-items: center;    /*垂直居中*/
}
.cakeList .cakeItem:nth-child(odd){
  padding-right:8rpx;
}
.cakeList .cakeItem:nth-child(even){
  padding-left:8rpx;
}
.cakeList .cakeItem .cake{
  width:100%;
  height:300rpx;
}
.cakeList .cakeItem .caketitle{
  font-size:14px;
  margin-top:10rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.cakeList .cakeItem .price{
  width:100%;
  padding:10rpx;
  box-sizing: border-box;
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.cakeList .cakeItem .cakeprice{
  font-size:14px;
  color:rgb(255, 0, 0);
}
.cakeList .cakeItem .cart{
  width:35rpx;
  height:35rpx;
}
.cakeList .lookmore{
  text-align: center;
  width:100%;
  height:30px;
  line-height: 30px;
  border:1rpx solid #ddd;
  font-size:14px;
  color:#666;
}
.botimg{
  width:100%;
  height:600rpx;
}
.index_bot{
  /* text-align: center; */
  background-color:#fff;
  padding:20rpx;
  box-sizing: border-box;
}
.hint{
  text-align: center;
  width:100%;
  background-image: url(http://127.0.0.1:3200/img/index/title.jpg);
  background-size:30%,30%;
  background-position:center,center;
  box-sizing: border-box;
  padding:10rpx;
  color:rgb(121, 121, 105);
}
.hinttext image{
  width:100%;
  height:800rpx;
}
.store{
  padding:20rpx 0;
  box-sizing:border-box;
  font-size:12px;
  color:#888;
  text-align: center;
}