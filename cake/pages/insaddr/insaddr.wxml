<view class="address">
  <form class='addrInfo' bindsubmit='getform'>
    <view><text>姓名</text> <input type='text' name="userName" placeholder='收货人姓名'></input></view>
    <view><text>电话</text><input name="tel" type='text' placeholder='收货人姓名'></input></view>
    <view><text>地区</text><picker mode="region" bindchange="bindRegionChange"><input name="region" disabled='true' placeholder='选择省/市/区' type='text' value='{{region}}'></input>
    </picker></view>
    <view><text>详细地址</text><textarea name="addr" placeholder='街道门牌，楼层房间号等信息'></textarea></view>
    <button formType='submit'>保存并使用</button>
  </form>
</view>